{
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,

	"files.eol": "\n",
	"files.encoding": "utf8",
	"files.insertFinalNewline": true,

	"files.exclude": {
		"dist": false,
		"coverage": true,
		"node_modules": true,
		"*.log*": true
	},

	"files.watcherExclude": {
		"dist/**": true,
		"source-a*/**": true,
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
	},

	"typescript.tsdk": "node_modules/typescript/lib/"
}
