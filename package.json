{
	"name": "crosscall",
	"version": "0.0.6-dev.15",
	"description": "cross-origin postmessage rpc",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "ISC",
	"keywords": [
		"cross-origin",
		"cross-domain",
		"postmessage",
		"rpc",
		"iframe",
		"popup",
		"bridge",
		"xorigin",
		"xdomain"
	],
	"files": [
		"dist",
		"dist-cjs",
		"source"
	],
	"scripts": {
		"prepare": "run-s build test",
		"build": "rimraf dist && mkdirp dist dist-cjs && run-p build-esm build-cjs importmap",
		"build-esm": "tsc",
		"build-cjs": "tsc --module commonjs --outDir dist-cjs && run-s replace-cjs-imports",
		"replace-cjs-imports": "replace-in-files --regex='renraku\\/dist\\/' --replacement='renraku/dist-cjs/' 'dist-cjs/**/*.js'",
		"importmap": "importly < package.json > dist/importmap.json",
		"start": "serve",
		"test": "jest --verbose dist-cjs"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/crosscall.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/crosscall/issues"
	},
	"homepage": "https://github.com/chase-moskal/crosscall#readme",
	"devDependencies": {
		"@types/jest": "^24.0.22",
		"importly": "0.1.0-dev.0",
		"jest": "^24.9.0",
		"mkdirp": "^0.5.1",
		"mock-local-storage": "^1.1.10",
		"npm-run-all": "^4.1.5",
		"replace-in-files-cli": "^0.3.0",
		"requirejs": "^2.3.6",
		"rimraf": "^3.0.0",
		"serve": "^11.2.0",
		"typescript": "^3.7.2"
	},
	"dependencies": {
		"renraku": "0.0.0-dev.18"
	}
}
